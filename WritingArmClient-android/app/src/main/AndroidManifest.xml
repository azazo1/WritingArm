<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WritingArmClientandroid"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ScmNetworkConfigActivity"
            android:exported="false"
            android:label="@string/title_activity_scm_network_config"
            android:theme="@style/Theme.WritingArmClientandroid" />
        <activity
            android:name=".ModeSelectingActivity"
            android:exported="false"
            android:label="@string/title_activity_mode_selecting"
            android:theme="@style/Theme.WritingArmClientandroid" />
        <activity
            android:name=".PenActivity"
            android:exported="false"
            android:label="@string/title_activity_pen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WritingArmClientandroid" />
        <activity
            android:name=".ConnectionActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WritingArmClientandroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>